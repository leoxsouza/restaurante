<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet author="leonardo.oliveira" id="20201004233200-1" labels="Criação da tabela Dividas">

        <createSequence sequenceName="SQ_DIVIDA"/>

        <createTable tableName="TB_DIVIDA" >

            <column name="ID_DIVIDA" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="DH_DIVIDA" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="VL_DIVIDA" type="NUMBER(19, 2)">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="20200911100900-2" author="leonardo.oliveira">
        <createSequence sequenceName="SQ_DIVIDA_CLIENTE"/>

        <createTable tableName="TB_DIVIDA_CLIENTE">
            <column name="ID_DIVIDA_CLIENTE" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="VL_TOTAL" type="NUMBER(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="ID_USUARIO" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="leonardo.oliveira" id="20201004233200-3">
        <addForeignKeyConstraint
                constraintName="FK_TB_DV_TB_DV_CLIENTE"
                baseColumnNames="ID_DIVIDA_CLIENTE" baseTableName="TB_DIVIDA_CLIENTE"
                referencedColumnNames="ID_DIVIDA" referencedTableName="TB_DIVIDA"
        />
        <addForeignKeyConstraint
                constraintName="FK_TB_CLI_TB_DV_CLIENTE"
                baseColumnNames="ID_USUARIO" baseTableName="TB_DIVIDA_CLIENTE"
                referencedColumnNames="ID_USUARIO" referencedTableName="TB_USUARIO"/>
    </changeSet>

</databaseChangeLog>
